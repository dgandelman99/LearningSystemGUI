<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningSystemGUI.UserViews.InstructorMainPage"
             Title="InstructorMainPage">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Danvas 3 - Learning Management System" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20"/>
            <Label Text="INSTRUCTOR VIEW" FontSize="18" HorizontalOptions="Center" Margin="0,0,0,20"/>
            <Label x:Name="InstructorInfoLabel" FontSize="Large" />
            <Label Text="Instructor Courses" FontSize="Large" />
            <ListView x:Name="InstructorCoursesListView" ItemSelected="InstructorCoursesListView_ItemSelected" />
            <Button Text="Switch User" Clicked="SwitchUserButton_Clicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>