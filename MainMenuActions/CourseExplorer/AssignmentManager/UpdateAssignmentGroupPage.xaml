<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningSystemGUI.MainMenuActions.CourseExplorer.AssignmentManager.UpdateAssignmentGroupPage"
             Title="UpdateAssignmentGroupPage">
    <StackLayout Margin="20">
        <Label Text="Update Assignment Group" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />
        <Label Text="Name:" />
        <Entry x:Name="NameEntry" />
        <Label Text="Weight:" />
        <Entry x:Name="WeightEntry" />
        <Button Text="Update" Clicked="UpdateButton_Clicked" />
        <Button Text="Back" Clicked="BackButton_Clicked" Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>