<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningSystemGUI.MainMenuActions.CourseExplorer.AnnouncementManager.UpdateAnnouncementPage"
             Title="UpdateAnnouncementPage">
    <StackLayout>
        <Label Text="Title:" />
        <Entry x:Name="TitleEntry" />
        <Label Text="Message:" />
        <Editor x:Name="ContentEditor" />
        <Button Text="Update Announcement" Clicked="UpdateAnnouncementButton_Clicked" />
        <Button Text="Delete Announcement" Clicked="DeleteAnnouncementButton_Clicked" />
        <Button Text="Back" Clicked="BackButton_Clicked" Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>