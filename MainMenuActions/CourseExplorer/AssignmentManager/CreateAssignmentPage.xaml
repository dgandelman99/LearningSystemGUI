<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningSystemGUI.MainMenuActions.CourseExplorer.AssignmentManager.CreateAssignmentPage"
             Title="CreateAssignmentPage">
    <StackLayout Margin="20">
        <Label Text="Name:" />
        <Entry x:Name="NameEntry" />

        <Label Text="Description:" />
        <Entry x:Name="DescriptionEntry" />

        <Label Text="Total available points:" />
        <Entry x:Name="TotalPointsEntry" Keyboard="Numeric" />

        <Label Text="Due date:" />
        <DatePicker x:Name="DueDatePicker" Format="MM/dd/yyyy" />

        <Button x:Name="CreateAssignmentButton" Text="Create Assignment" Clicked="CreateAssignmentButton_Clicked" />
        <Button Text="Back" Clicked="BackButton_Clicked" Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>