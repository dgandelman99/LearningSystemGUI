<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningSystemGUI.MenuActions.CreateCoursePage"
             Title="CreateCoursePage">
    <StackLayout Padding="20">
        <Label Text="Create a Course" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20"/>
        <Entry x:Name="courseCodeEntry" Placeholder="Course code"/>
        <Entry x:Name="courseNameEntry" Placeholder="Course name"/>
        <Entry x:Name="courseCreditHoursEntry" Placeholder="Course credit hours" Keyboard="Numeric"/>
        <Entry x:Name="courseDescriptionEntry" Placeholder="Course description"/>
        <Button Text="Create Course" Clicked="CreateCourseButton_Clicked"/>
        <Button Text="Back" Clicked="BackButton_Clicked" Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>
