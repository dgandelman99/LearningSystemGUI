<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningSystemGUI.MainMenuActions.CourseExplorer.AssignmentManager.CreateGroupPage"
             Title="CreateGroupPage">
    <StackLayout Padding="20">
        <Label Text="Enter Group Information" FontSize="Large" />
        <Entry x:Name="GroupNameEntry" Placeholder="Group Name" />
        <Entry x:Name="GroupWeightEntry" Placeholder="Group Weight" Keyboard="Numeric" />
        <Button Text="Create Group" Clicked="CreateGroupButton_Clicked" />
        <Button Text="Back" Clicked="BackButton_Clicked" Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>